<div>
<%= form.label :name %>
<%= form.text_field :name %>
</div>

<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<% unless signed_in? %>
	<div class="password-field">
	  <%= form.label :password %>
	  <%= form.password_field :password %>
	</div>
<% end %>
